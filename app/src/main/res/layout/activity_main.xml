<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score Counter"
        android:layout_gravity="center"
        android:fontFamily="@font/oldsports"
        android:textSize="32sp"
        android:padding="15dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
                <TextView
                    android:text="Team 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/oldsportsfilled"
                    android:textSize="18sp"></TextView>
                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreT1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/oldsportsfilled"
                    android:textSize="28sp"></TextView>
                <Button
                    android:text="+2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/T12p"
                    android:onClick="add2T1"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ball"
                    android:textSize="24sp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/oldsportsfilled"></Button>
                <Button
                    android:text="+3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/T13p"
                    android:onClick="add3T1"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ball"
                    android:textSize="24sp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/oldsportsfilled"></Button>
                <Button
                    android:text="+1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/T11p"
                    android:onClick="add1T1"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ball"
                    android:textSize="24sp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/oldsportsfilled"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:text="Team 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/oldsportsfilled"
                android:textSize="18sp"></TextView>
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreT2"
                android:layout_gravity="center"
                android:fontFamily="@font/oldsportsfilled"
                android:textSize="28sp"></TextView>
            <Button
                android:text="+2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/T22p"
                android:onClick="add2T2"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ball"
                android:textSize="24sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/oldsportsfilled"></Button>
            <Button
                android:text="+3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/T23p"
                android:onClick="add3T2"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ball"
                android:textSize="24sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/oldsportsfilled"></Button>
            <Button
                android:text="+1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/T21p"
                android:onClick="add1T2"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ball"
                android:textSize="24sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/oldsportsfilled"></Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/Reset"
            android:onClick="resetScore"
            android:layout_gravity="center"
            android:fontFamily="@font/oldsportsfilled"
            android:textSize="22sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:layout_margin="10dp"
            android:paddingBottom="8dp"></Button>
    </LinearLayout>
</LinearLayout>